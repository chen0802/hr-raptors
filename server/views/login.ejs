<% include head.ejs%>
<div class="center">
  <div class="login">
    <div id="head">
      <h1>Material Studio</h1>
    </div>

    <div style="margin-left:25px">
      <div class="row">
        <div class="col s6 offset-s3">
          <div class="card darken-1 z-depth-4">
            <div class="card-content black-text">
              <span class="card-title">
              <h1><span class="fa fa-sign-in"></span> Login</h1>
              <% if (message.length) { %>
              <div class="alert alert-danger"><%= message %></div>
              <% } %>
              </span>
              <!-- login form -->
              <div class="row">
                <form action="/login" method="post" class="col s12">
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="fa fa-user-circle-o fa-5x prefix" aria-hidden="true"></i>
                        <input id="icon_prefix" type="text" class="form-control validate" name="email">
                      <label for="icon_prefix">Email</label>
                    </div>
                    <div class="input-field col s12">
                      <i class="fa fa-lock fa-5x prefix" aria-hidden="true"></i>
                      <input type="password" class="form-control validate" name="password">
                      <label for="icon_prefix">Password</label>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit" name="action" style="background-color:black">Login
                     <i class="fa fa-paper-plane-o fa-4x right" aria-hidden="true"></i>
                    </button>
                  </div>
                </form>
              </div>
            </div>
            <div class="card-action">
            <hr>
            <div>
                Or login with any of the following services:<br />
                <a style="margin-right:15px;color:black" href="/auth/facebook"><img style="width:50px" src="/assets/fb-transparent-logo.png" /></a>
                <a style="margin-left:15px;margin-right:15px;color:black" href="/auth/google"><img style="width:50px" src="/assets/google-logo.png" /></a>
                <!--<a style="margin-left:15px" href="/auth/twitter"><img style="width:48px" src="/assets/twitter-logo.png" /></a>-->
            </div>
            <hr>
            <p>Need to sign up for an account? <a href="/signup">Signup</a></p>
            <p><a href="/">home</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include foot.ejs%>
